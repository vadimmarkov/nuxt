{
    "name": "nuxt-app",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "nuxt dev",
        "build": "nuxt build",
        "start": "nuxt preview",
        "postinstall": "nuxt prepare",
        "analyze": "npx nuxi analyze",
        "lint:fix": "eslint . --fix",
        "prettier:write": "prettier . --write",
        "prepare": "node .husky/install.mjs"
    },
    "lint-staged": {
        "**/*.{.js,ts,vue,mjs}": [
            "npm run lint:fix",
            "npm run prettier:write"
        ],
        "**/*.{jpeg,jpg,png,webp,avif}": "node ./.husky/compress-image.mjs",
        "**/*.svg": "node ./.husky/compress-svg.mjs"
    },
    "engines": {
        "npm": "~10.7.0",
        "node": "~18.20.3"
    },
    "dependencies": {
        "@fontsource-variable/montserrat": "^5.1.0",
        "nuxt": "^3.14.1592",
        "sanitize.css": "^13.0.0",
        "socket.io-client": "^4.8.1",
        "vue": "latest",
        "vue-router": "latest"
    },
    "devDependencies": {
        "@nuxt/eslint": "^0.7.2",
        "@nuxt/eslint-config": "^0.7.1",
        "eslint": "^9.15.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-format": "^0.1.2",
        "eslint-plugin-prettier": "^5.2.1",
        "husky": "^9.1.7",
        "lint-staged": "^15.2.10",
        "prettier": "^3.3.3",
        "sass": "^1.81.0",
        "sharp": "^0.33.5",
        "svgo": "^3.3.2",
        "typescript": "^5.7.2"
    }
}
